<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daftar_penyakit"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/linearLayoutCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shadowdeteksi"
            android:letterSpacing=".1"
            android:padding="15sp"
            android:layout_gravity="center"
            android:text="DAFTAR PENYAKIT"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/anthracnose"
            android:layout_width="250sp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/anthrocnose"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/downymildew"
            android:layout_width="250sp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/downy_mildew" />

        <ImageView
            android:id="@+id/mosaicvirus"
            android:layout_width="250sp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mosaic_virus"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
